enum DropRarity {
    Normal = 0,     // 0.8x multiplier
    Common = 1,     // 1.0x multiplier  
    Uncommon = 2,   // 1.2x multiplier
    Rare = 3,       // 1.5x multiplier
    Epic = 4,       // 2.0x multiplier
    Legendary = 5,  // 3.0x multiplier
    Mythic = 6,     // 4.0x multiplier
    Artifact = 7    // 5.0x multiplier
}</div>
